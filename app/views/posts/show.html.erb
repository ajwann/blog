<div class="row">
  <div class="col-sm-12">
    <h3><%= @post.title.html_safe %></h3>
    <p><small><%= post.created_at.strftime('%Y-%m-%d') %></small></p>
    <%= @post.text.html_safe %>
    <% if admin_signed_in? %>
      &nbsp
      <br>
      <%= link_to 'Edit', edit_post_path(@post) %>&nbsp
      <%= link_to 'Destroy', post_path(@post),
                             method: :delete,
                             data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>
