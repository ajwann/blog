<div class="row">
  <div class="col-md-12">
      <%= render 'post', post: @post %>
    <% if admin_signed_in? %>
      &nbsp
      <br>
      <%= link_to 'Edit', edit_post_path(@post) %>&nbsp
      <%= link_to 'Destroy', post_path(@post),
                             method: :delete,
                             data: { confirm: 'Are you sure?' } %>
    <% end %>
  </div>
</div>
